---
import '../styles/component-styles/Code.css';

interface Props {
  language: string;
}
const { language } = Astro.props;
---
<div class="code-container">
    <div class="code-container-lang" style="position: absolute; right: 0.5rem; top: 0.5rem; font-weight: bold;">
        <p>{language}</p>
    </div>
    <pre class="astro-code github-light">
        <slot />
    </pre>
</div>